{
  "name": "student-course-api",
  "version": "1.0.0",
  "description": "API pédagogique pour gérer étudiants et cours (no DB) — tests, CI, doc",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint .",
    "format": "prettier --write .",
    "docs": "node scripts/generate-swagger.js",
    "report:codacy": "npm run test:coverage && codacy-coverage < coverage/lcov.info",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format && npm run test:coverage && npm run docs"
    }
  },
  "author": "EL AMRANI Amine",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "codacy-coverage": "^3.4.0",
    "eslint": "^9.39.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^2.8.8",
    "supertest": "^6.3.4"
  }
}
